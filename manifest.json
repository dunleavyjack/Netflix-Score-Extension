{
"manifest_version": 2,
"name": "Score Puppy",
"version": "1.1",
"description": "IMDb and Rotten Tomatoes scores added right to your Netflix. Woof.",
"web_accessible_resources" : [
    "images/score_puppy_cropped.png",
    "images/imdb_logo_color.png",
    "images/rt_logo_bw.png",
    "images/arfy.png",
    "images/imdb_logo_bw.png",
    "images/rt_logo_color.png",
    "css/style.css"
],
"background": {
    "scripts": ["js/background.js"]
},
"browser_action" : { 
    "default_icon" : "images/arfy.png"
},
"permissions": [
    "https://www.omdbapi.com/*"
],
"icons": {
    "16": "images/arfy.png",
    "32": "images/arfy.png",
    "48": "images/arfy.png",
    "128": "images/arfy.png"
},
"content_scripts" : [
{ 
"matches" : [ 
    "https://www.netflix.com/browse/genre/*"
], 
"js" : [
    "js/jquery-3.5.1.min.js",
    "js/content.js"
],
"css" : [
    "css/style.css"
]
}
]
}